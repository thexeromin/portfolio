---
// ProjectCard.astro
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  tags: string[];
}

const { title, description, image, href, tags } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="group hover:border-neon block w-full rounded-xl border border-white/10 bg-transparent transition-all duration-300 hover:-translate-y-1"
>
  <div class="w-full overflow-hidden rounded-t-xl border-b border-white/10">
    <img
      src={image}
      alt={title}
      class="h-48 w-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>

  <div class="p-6">
    <h3
      class="font-dm-mono group-hover:text-neon mb-3 text-xl text-white transition-colors"
    >
      {title}
    </h3>

    <p class="text-ice/70 font-inter mb-6 text-sm leading-relaxed">
      {description}
    </p>

    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="text-ice/60 group-hover:border-neon/30 group-hover:text-neon font-inter rounded border border-white/10 px-2 py-1 text-xs transition-colors">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</a>
