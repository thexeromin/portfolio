<header class="bg-dark-base fixed top-0 z-50 w-full pt-4">
  <nav class="w-full px-6">
    <div
      class="border-neon mx-auto flex max-w-7xl items-center justify-between border-b-3 border-dotted pb-4"
    >
      <!-- Logo -->
      <div class="text-2xl font-bold tracking-tighter">
        <a
          href="/"
          class="group font-major-display relative inline-block no-underline"
        >
          <span
            class="text-neon block transition-opacity duration-300 ease-in-out group-hover:opacity-0"
          >
            A
          </span>

          <span
            class="text-neon absolute top-0 left-0 opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100"
          >
            T
          </span>
        </a>
      </div>

      <div class="hidden gap-8 md:flex">
        <a href="/" class="nav-link">Home</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/project" class="nav-link">Project</a>
      </div>

      <button
        id="menu-btn"
        class="text-white focus:outline-none md:hidden"
        aria-label="Toggle Menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-8 w-8"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
  </nav>

  <div
    id="mobile-menu"
    class="absolute top-20 left-0 z-40 hidden h-screen w-full flex-col items-center gap-8 bg-[#1D232A]/95 p-8 backdrop-blur-md transition-all duration-300 md:hidden"
  >
    <a href="#home" class="mobile-link">Home</a>
    <a href="#work" class="mobile-link">Work</a>
    <a href="#about" class="mobile-link">About</a>
    <a href="#contact" class="mobile-link">Contact</a>
  </div>
</header>

<style></style>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener("click", () => {
      // Toggle hidden class
      mobileMenu.classList.toggle("hidden");
      mobileMenu.classList.toggle("flex");

      // TODO: Change icon or animate button state here if desired
    });

    // Close menu when a link is clicked
    const links = mobileMenu.querySelectorAll("a");
    links.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
        mobileMenu.classList.remove("flex");
      });
    });
  }
</script>
