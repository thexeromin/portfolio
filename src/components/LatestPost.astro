const posts = [
  {
    number: "01.",
    title: "Building Scalable Systems with Rust",
    date: "September 2024",
    link: "#"
  },
  {
    number: "02.",
    title: "Understanding Tailwind CSS 4.0 Architecture",
    date: "August 2024",
