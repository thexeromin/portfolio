---
import ProjectCard from "./ProjectCard.astro";
import PortfolioPreview from "../assets/portfolio_preview.jpg";
import TermzicPreview from "../assets/termzic_preview.jpg";

const projects = [
  {
    title: "Personal Portfolio",
    description:
      "Designed from scratch in Figma and built for speed. A high-performance blog and portfolio featuring type-safe architecture and SEO optimization.",
    image: PortfolioPreview.src,
    href: "https://github.com/thexeromin/portfolio",
    tags: ["Astro", "Tailwind", "TypeScript", "Figma"]
  },
  {
    title: "Kuan HTTP Server",
    description:
      "A lightweight HTTP server implementation built from scratch. Designed to demonstrate the fundamentals of network protocols, socket programming, and request handling.",
    image: "https://placehold.co/600x400/1e1e1e/FFF?text=Kuan",
    href: "https://github.com/thexeromin/kuan",
    tags: ["C", "Networking", "HTTP", "Sockets"]
  },
  {
    title: "Termzic",
    description:
      "A minimalist Terminal User Interface (TUI) music player. Provides a clean, keyboard-driven audio experience directly inside the command line environment.",
    image: TermzicPreview.src,
    href: "https://github.com/thexeromin/termzic",
    tags: ["C", "TUI", "Audio", "CLI"]
  }
];

interface Props {
  isFeatured?: boolean;
}

const { isFeatured = false } = Astro.props;
---

<section class={isFeatured ? "mt-24 w-fll" : "w-full"}>
  <h2 class="font-dm-mono text-ice mb-4 inline-block pb-4 text-2xl font-medium">
    {isFeatured ? "Featured Projects" : "Projects"}
  </h2>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      (isFeatured ? projects.slice(0, 2) : projects).map((project) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          image={project.image}
          href={project.href}
          tags={project.tags}
        />
      ))
    }
  </div>
</section>
